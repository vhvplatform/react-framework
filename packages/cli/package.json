{
  "name": "@vhvplatform/cli",
  "version": "1.0.0",
  "description": "CLI tools for creating SaaS applications and modules",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "saas-cli": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "fs-extra": "^11.2.0",
    "@vhvplatform/templates": "workspace:*",
    "@vhvplatform/app-adapter": "workspace:*",
    "@vhvplatform/ai-codegen": "workspace:*"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3"
  }
}
