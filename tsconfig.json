{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,

    /* Module resolution */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@vhvplatform/core": ["./packages/core/src"],
      "@vhvplatform/api-client": ["./packages/api-client/src"],
      "@vhvplatform/auth": ["./packages/auth/src"],
      "@vhvplatform/ui-components": ["./packages/ui-components/src"],
      "@vhvplatform/shared": ["./packages/shared/src"],
      "@vhvplatform/cli": ["./packages/cli/src"],
      "@vhvplatform/i18n": ["./packages/i18n/src"],
      "@vhvplatform/crud": ["./packages/crud/src"],
      "@vhvplatform/cache": ["./packages/cache/src"],
      "@vhvplatform/context": ["./packages/context/src"],
      "@vhvplatform/forms": ["./packages/forms/src"],
      "@vhvplatform/media": ["./packages/media/src"],
      "@vhvplatform/vietnamese": ["./packages/vietnamese/src"],
      "@vhvplatform/testing": ["./packages/testing/src"],
      "@vhvplatform/theme": ["./packages/theme/src"],
      "@vhvplatform/notifications": ["./packages/notifications/src"],
      "@vhvplatform/query": ["./packages/query/src"],
      "@vhvplatform/templates": ["./packages/templates/src"],
      "@vhvplatform/app-adapter": ["./packages/app-adapter/src"],
      "@vhvplatform/ai-codegen": ["./packages/ai-codegen/src"],
      "@vhvplatform/create-app": ["./packages/create-app/src"],
      "@vhvplatform/config": ["./packages/config/src"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/api-client" },
    { "path": "./packages/auth" },
    { "path": "./packages/ui-components" },
    { "path": "./packages/shared" },
    { "path": "./packages/cli" },
    { "path": "./packages/i18n" },
    { "path": "./packages/crud" },
    { "path": "./packages/cache" },
    { "path": "./packages/context" },
    { "path": "./packages/forms" },
    { "path": "./packages/media" },
    { "path": "./packages/vietnamese" },
    { "path": "./packages/testing" },
    { "path": "./packages/theme" },
    { "path": "./packages/notifications" },
    { "path": "./packages/query" },
    { "path": "./packages/templates" },
    { "path": "./packages/app-adapter" },
    { "path": "./packages/ai-codegen" },
    { "path": "./packages/create-app" },
    { "path": "./packages/config" }
  ]
}
