{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,

    /* Module resolution */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@longvhv/core": ["./packages/core/src"],
      "@longvhv/api-client": ["./packages/api-client/src"],
      "@longvhv/auth": ["./packages/auth/src"],
      "@longvhv/ui-components": ["./packages/ui-components/src"],
      "@longvhv/shared": ["./packages/shared/src"],
      "@longvhv/cli": ["./packages/cli/src"],
      "@longvhv/i18n": ["./packages/i18n/src"],
      "@longvhv/crud": ["./packages/crud/src"],
      "@longvhv/cache": ["./packages/cache/src"],
      "@longvhv/context": ["./packages/context/src"],
      "@longvhv/forms": ["./packages/forms/src"],
      "@longvhv/media": ["./packages/media/src"],
      "@longvhv/vietnamese": ["./packages/vietnamese/src"]
    }
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/api-client" },
    { "path": "./packages/auth" },
    { "path": "./packages/ui-components" },
    { "path": "./packages/shared" },
    { "path": "./packages/cli" },
    { "path": "./packages/i18n" },
    { "path": "./packages/crud" },
    { "path": "./packages/cache" },
    { "path": "./packages/context" },
    { "path": "./packages/forms" },
    { "path": "./packages/media" },
    { "path": "./packages/vietnamese" }
  ]
}
